<div class="container">
  <div class="row my-5">
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-3 d-flex">
            <% if(lastPost) { %>
            <a href="/news/<%= lastPost[0]._id %>">
              <img
                style="height: 400px"
                src="<%= lastPost[0].image %>"
                class="card-img-top"
              />
              <div class="card-body">
                <h5 class="card-title"><%= lastPost[0].description %></h5>
                <div>
                  <p class="card-t ext">
                    <small class="text-muted">Last updated 3 mins ago</small>
                  </p>
                </div>
              </div>
            </a>
            <% } %>
          </div>
        </div>
      </div>

      <div class="row mt-3">
        <% if(posts) { %> <% for(post of posts) { %>
        <div class="col-6">
          <div class="card mb-3">
            <a href="/news/<%= post._id %>">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <img
                    style="height: 150px"
                    src="<%= post.image %>"
                    class="card-img-top"
                  />
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title"><%= post.description %></h5>

                    <p class="card-text">
                      <small class="text-muted">Last updated 3 mins ago</small>
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
        <% } %> <% } %>
      </div>
    </div>
    <div class="col-md-3">
      <h4 class="text-center">Latest news</h4>
      <div class="row mt-4">
        <% if(latestPosts) { %> <% for(post of latestPosts) { %>
        <div class="col-12">
          <div class="card mb-3" style="max-width: 540px">
            <a href="/news/<%= post._id %>">
              <div class="card-body">
                <p class="card-text"><%= post.description %></p>
                <p class="card-text">
                  <small class="text-muted">Last updated 3 mins ago</small>
                </p>
              </div>
            </a>
          </div>
        </div>
        <% } %> <% } %>
      </div>
    </div>
  </div>
</div>
